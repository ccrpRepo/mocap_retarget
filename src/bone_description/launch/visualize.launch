
<launch>
    <arg name="model" />
    <arg name="gui" default="False" />
    <param name="robot_description" textfile="$(find bone_description)/urdf/bone.urdf" />
    
    <!-- <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" required="true"/> -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
      <param name="publish_frequency" value="1000"/>
      <param name="use_tf_static"     value="true"/>
  </node>
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find bone_description)/config/bone.rviz"/>
    <node name="mocap_visualize" pkg="bone_description" type="3Dviewer.py" output="screen"/>
    <node pkg="tf" type="static_transform_publisher" name="world"
      args="0 0 0 0 0 0 map world 100" />
    <node name="g1_retarget" pkg="g1_description" type="g1_retarget.py" output="screen"/>
</launch>